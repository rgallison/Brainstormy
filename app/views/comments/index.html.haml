-#%h1 Listing commments for #{@idea.title}

%table#comments
  %thread
    %tr
      %th User
      %th Body
      %th Rank
      %th Upvote
      %th Downvote   
      %th
      
    %tbody
    - @comments.each do |comment|
      %tr
        %td= comment.rank
        %td= comment.user.name
        %td= comment.text
        %td= button_to "+", comments_upvote_path(:id => comment.id), :class => "voterButtons up"
        %td= button_to "-", comments_downvote_path(:id => comment.id), :class => "voterButtons down"
        %td.small-font= #link_to "delete", idea_comment_path(comment.id), :method => :delete

        

-#= link_to 'Back to idea list', ideas_path(@idea.id)
