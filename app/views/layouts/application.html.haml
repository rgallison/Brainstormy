!!! 5
%html
  %head
    %title Brainstormy
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    =csrf_meta_tags

  %body
  %header
    %div{:class => 'logoPos'}
      = link_to(image_tag("logo_example.jpg", :size => "250x70", :alt => "Brainstormy logo"), root_path)
    %div{:class => 'usernamePos'}
      -if @current_user
        =link_to "#{User.find_by_id(@current_user).username}", user_path(@current_user), :class => "username"
        = link_to 'Logout', application_logout_user_path
    %div{:class => 'searchPos'}
      = form_tag('/home/index') do
        = submit_tag 'Search'
        = search_field_tag 'search', nil, :size => 20
  #main
    - [:notice, :warning].each do |key|
      -if flash[key]
        %p{:class => "flash#{key}"}= flash[key]
    = yield

