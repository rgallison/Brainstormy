%div.panelHalf
	%b My Messages
	%br
	%table#messages
		%tbody
			- if @messages
				-@messages.each do |message|
					%tr{:class => ("highlight" if message.status == 'unread')}
						%td= link_to "#{message.subject}", message_path(message.id)
						%td= link_to "#{User.find_by_id(message.sender).username}", user_path(message.sender)
						%td= message.created_at.strftime("%B %d, %Y")
-if @message
	%div.panel1
		%p From: #{link_to "#{User.find_by_id(@message.sender).username}", user_path(@message.sender)}
		%p Subject: #{@message.subject}
		%hr
		%p= @message.message
		=form_tag(:action => 'create', :controller => 'messages', :method => :get) do
			=text_area_tag("message[message]", nil, :placeholder => 'Enter your message.', :size => '40x5')
			=hidden_field_tag("message[subject]", "RE:#{@message.subject}")
			=hidden_field_tag("message[parent]", @message.id)
			=hidden_field_tag("message[receiver]", @message.sender)
			=submit_tag 'Reply'

-else
	%div.panel1
		%b New Message
		%div.newMessage
			=form_for :message, :url => {:action => 'create', :controller => 'messages'} do |f|
				=f.text_field :receiver, :placeholder => 'To: Username', :size => 30
				=f.text_field :subject, :placeholder => 'Subject', :size => 30
				=f.text_area :message, :placeholder => 'Enter your message.', :size => "40x20"
				%br
				=f.submit 'Send'




