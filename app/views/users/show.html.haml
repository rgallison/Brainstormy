%h2 #{@user.username}

%div{:name => 'profile_picture', :class => 'profile_picture'}
	%b Profile picture

%div{:name=>"profile_info", :class => "profile_info"} 
	%b Edit Profile
	=form_for :user, :url => { :action => "create", :controller=>"users"} do |f|
		= f.text_field :username, :placeholder => 'Username', :size => 30
		%br
		= f.text_field :name, :placeholder => 'Name', :size => 30 
		%br
		= f.text_field :email, :placeholder => 'E-mail', :size => 30
		%br
		= f.password_field :password, :placeholder => 'Password', :size => 30
		%br
		= f.submit 'Update'

%div{:name => 'bio', :class => 'bio'}
	%b Biography
	=@user.bio